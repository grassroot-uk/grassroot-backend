datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
  // previewFeatures = []
}

generator dbml {
  provider = "prisma-dbml-generator"
}

model User {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  email     String   @unique
  password  String
  firstname String?
  lastname  String?
  files     File[]
  role      Role
}

model File {
  id            String    @id @default(cuid())
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  uploadedIPFS  Boolean   @default(true)
  name          String
  owner         User?     @relation(fields: [ownerId], references: [id])
  ownerId       String?
  metadataUrl   String?
  metadataCid   String?
  imageUrl      String?
  imageCid      String?
  metadata      Json?
  resolver      String?
}

