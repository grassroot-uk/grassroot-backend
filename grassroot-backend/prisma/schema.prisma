model Campaign {
  id                   String     @id @default(cuid())
  createdAt            DateTime   @default(now())
  updatedAt            DateTime   @updatedAt
  title                 String
  subtitle             String
  campaignId           Int
  transactionHash      String
  category             Category[] @relation("campaignCategory")
  subCategory          Category[] @relation("campaignSubCategory")
  images               String[]
  videos               String[]
  tokenCurrency        String
  tokenCurrencyAddress String
  minAmount            BigInt
  goalAmount           BigInt
  completionDate       BigInt
  country              String
  city                 String
  state                String
  metadata             Json?
  daoId                String
  dao                  DAO        @relation(fields: [daoId], references: [id])
  categoryId           String?
}

model Tag {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  ownerId   String
  owner     User?    @relation(fields: [ownerId], references: [id])
  name      String
  daoId     String?
  dao       DAO?     @relation(name: "tags", fields: [daoId], references: [id])
}

model Category {
  id                    String    @id @default(cuid())
  createdAt             DateTime  @default(now())
  updatedAt             DateTime  @updatedAt
  ownerId               String
  owner                 User?     @relation(fields: [ownerId], references: [id])
  name                  String
  daoId                 String?
  dao                   DAO?      @relation(name: "category", fields: [daoId], references: [id])
  daoIdSub              String?
  daoSub                DAO?      @relation(name: "subcategory", fields: [daoIdSub], references: [id])
  campaignCategoryId    String?   @unique
  campaignCategory      Campaign? @relation(name: "campaignCategory", fields: [campaignCategoryId], references: [id])
  campaignSubCategoryId String?   @unique
  campaignSubCategory   Campaign? @relation(name: "campaignSubCategory", fields: [campaignSubCategoryId], references: [id])

  type TypeCategory @default(CATEGORY)
}


model PendingNonce {
  id                    String    @id @default(cuid())
  createdAt             DateTime  @default(now())
  updatedAt             DateTime  @updatedAt
  address               String?   @unique
  nonce                 String
}

enum TypeCategory {
  CATEGORY
  SUBCATEGORY
}

enum Role {
  ADMIN
  USER
}
